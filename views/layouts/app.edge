        <script>
            $(document).ready(function() { 
                console.log('login')
                let username = localStorage.getItem('username');
                if (username) {
                    $('#username').val(username)
                }

                if ($('#remember').is(':checked')) {
                    localStorage.setItem('username', $('#username').val()) 

                } else {
                    localStorage.removeItem('username')
                }
            })
        </script>
